[Unit]
Description=Play Shutdown Sound
DefaultDependencies=no
After=sound-controller.service
Wants=sound-controller.service
Before=shutdown.target reboot.target halt.target

[Service]
Type=oneshot
ExecStart=/usr/bin/python3 /home/reekroo/scripts/sounds/tools/shutdown_sound.py
WorkingDirectory=/home/reekroo/scripts
User=root
Group=root

[Install]
WantedBy=halt.target reboot.target shutdown.target
